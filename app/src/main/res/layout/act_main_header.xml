<?xml version="1.0" encoding="utf-8"?>
<com.master.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/carousel_tab_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/carousel_label_height"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_header" />

    <include
        layout="@layout/act_main_flow_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</com.master.HeaderView>