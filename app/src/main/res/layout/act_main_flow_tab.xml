<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/carousel_label_height"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/mRgFloatTabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mRbAbout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="经典路线"
                android:textColor="@drawable/color_green2b_grayc5_selector"
                android:textSize="16dp" />

            <View
                android:layout_width="@dimen/divider_width"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="#939393" />

            <RadioButton
                android:id="@+id/mRbComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="周边路线"
                android:textColor="@drawable/color_green2b_grayc5_selector"
                android:textSize="16dp" />

            <View
                android:layout_width="@dimen/divider_width"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="#939393" />

            <RadioButton
                android:id="@+id/mRbRelevant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="我的行程"
                android:textColor="@drawable/color_green2b_grayc5_selector"
                android:textSize="16dp" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>